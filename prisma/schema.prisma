datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?
  providerEmail      String?
  providerImage      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Credentials auth fields
  username      String?   @unique
  password      String?   @db.Text
  
  // Facebook Tokens - Separated by use case
  facebookPageToken String? @db.Text // For AdBox (pages, messaging)
  facebookAdToken   String? @db.Text // For AdManager (ads, insights)
  permissions       String? @db.Text // JSON: { canDownload: true, canManage: false, ... }
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id           String    @id // Facebook Conversation ID
  pageId       String
  updatedAt    DateTime  @updatedAt
  lastMessageAt DateTime @default(now()) // เวลาข้อความล่าสุด (ไม่เปลี่ยนเมื่อ mark as read)
  snippet      String?   @db.Text
  unreadCount  Int       @default(0)
  lastReadAt   DateTime? // Time when user last read the conversation
  
  participantId   String?
  participantName String?
  facebookLink    String?   @db.Text // Link เปิดไปหน้า Inbox บน Facebook
  
  // Ad tracking - เมื่อลูกค้าทักมาจากโฆษณา
  adId            String?   // Facebook Ad ID
  adName          String?   // ชื่อโฆษณา (ถ้ามี)
  
  assigneeId      String?   // ID of the staff assigned to this chat
  
  // Viewer tracking - who last viewed this conversation
  viewedBy        String?   // User ID who last viewed
  viewedByName    String?   // User name for quick display
  viewedAt        DateTime? // When it was last viewed
  
  messages     Message[]
  
  @@index([pageId])
  @@index([adId])
  @@index([lastMessageAt])
  @@index([assigneeId])
}

model Message {
  id             String       @id // Facebook Message ID
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  senderId       String
  senderName     String?
  content        String?      @db.Text
  attachments    String?      @db.Text // JSON: [{type: 'sticker'|'image'|'like', url: '...'}]
  stickerUrl     String?      @db.Text // Direct sticker URL for quick access
  createdAt      DateTime
  isFromPage     Boolean      @default(false)
  
  @@index([conversationId])
}

model PageSettings {
  id          String   @id @default(cuid())
  pageId      String   @unique
  
  // Rotation Mode
  rotationMode String  @default("OFF") // OFF, MANUAL, GROUP, USER
  
  // Advanced Settings
  distributionMethod String @default("EQUAL") // EQUAL
  keepAssignment     Boolean @default(false)
  shuffleUsers       Boolean @default(false)
  maxUsersPerChat    Int     @default(1)
  
  // Active Users for Rotation (List of Facebook User IDs)
  activeRotationUserIds String? @db.Text // JSON: ["fb_id_1", "fb_id_2"]
  
  // Transfer Settings
  transferIfUnreadMinutes Int? // null = OFF
  transferIfOffline       Boolean @default(false)
  
  // Limits
  unreadLimitPerUser Int? // null = OFF
  
  // Schedule
  rotationSchedule String @default("ALWAYS") // ALWAYS, WORKING_HOURS
  
  // Access
  nonSelectedCanViewAll Boolean @default(false)
  assignToNonSelected   String? // "ASSIGN_TO_THEM"
  
  updatedAt DateTime @updatedAt
}

// =============================================
// Ad Manager Models - Cached from Facebook API
// =============================================

model AdAccount {
  id            String   @id // Facebook Ad Account ID (act_xxxx)
  userId        String   // Owner user ID
  accountId     String   // Numeric account ID
  name          String
  currency      String   @default("THB")
  accountStatus Int      @default(1)
  timezone      String?
  timezoneOffset Int     @default(0)
  
  // Cached stats (updated during sync)
  totalAds      Int      @default(0)
  activeAds     Int      @default(0)
  pausedAds     Int      @default(0)
  totalSpend    Float    @default(0)
  totalImpressions Int   @default(0)
  totalReach    Int      @default(0)
  totalClicks   Int      @default(0)
  
  campaigns     Campaign[]
  ads           FacebookAd[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastSyncAt    DateTime @default(now())
  
  @@index([userId])
}

model Campaign {
  id              String   @id // Facebook Campaign ID
  adAccountId     String
  adAccount       AdAccount @relation(fields: [adAccountId], references: [id], onDelete: Cascade)
  
  name            String
  status          String   // ACTIVE, PAUSED, DELETED, etc.
  effectiveStatus String   // actual delivery status
  objective       String?
  
  // Budget
  dailyBudget     Float?
  lifetimeBudget  Float?
  budgetRemaining Float?
  
  // Dates
  startTime       DateTime?
  stopTime        DateTime?
  
  // Cached insights
  impressions     Int      @default(0)
  reach           Int      @default(0)
  spend           Float    @default(0)
  clicks          Int      @default(0)
  results         Int      @default(0)
  
  adSets          AdSet[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([adAccountId])
  @@index([status])
}

model AdSet {
  id              String   @id // Facebook AdSet ID
  campaignId      String
  campaign        Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  adAccountId     String
  
  name            String
  status          String
  effectiveStatus String
  
  // Budget
  dailyBudget     Float?
  lifetimeBudget  Float?
  budgetRemaining Float?
  
  // Optimization
  optimizationGoal String?
  billingEvent    String?
  bidAmount       Float?
  
  // Dates
  startTime       DateTime?
  endTime         DateTime?
  
  // Cached insights
  impressions     Int      @default(0)
  reach           Int      @default(0)
  spend           Float    @default(0)
  clicks          Int      @default(0)
  results         Int      @default(0)
  
  ads             FacebookAd[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([campaignId])
  @@index([adAccountId])
  @@index([status])
}

model FacebookAd {
  id              String   @id // Facebook Ad ID
  adAccountId     String
  adAccount       AdAccount @relation(fields: [adAccountId], references: [id], onDelete: Cascade)
  adSetId         String?
  adSet           AdSet?   @relation(fields: [adSetId], references: [id], onDelete: SetNull)
  
  name            String
  status          String   // ACTIVE, PAUSED, DELETED, etc.
  effectiveStatus String   // actual delivery status
  
  // Campaign & AdSet info (denormalized for quick access)
  campaignId      String?
  campaignName    String?
  adSetName       String?
  
  // Creative
  thumbnail       String?  @db.Text
  
  // Budget (stored as string, can be daily or lifetime)
  budget          String?
  
  // Page info
  pageId          String?
  pageName        String?
  pageUsername    String?
  
  // Insights - aggregated stats (updated periodically)
  impressions     Int      @default(0)
  reach           Int      @default(0)
  spend           Float    @default(0)
  clicks          Int      @default(0)
  results         Int      @default(0) // messaging_first_reply
  roas            Float    @default(0)
  cpm             Float    @default(0)
  
  // Video metrics
  videoPlays      Int      @default(0)
  videoP25        Int      @default(0)
  videoP50        Int      @default(0)
  videoP75        Int      @default(0)
  videoP95        Int      @default(0)
  videoP100       Int      @default(0)
  videoAvgTime    Float    @default(0)
  
  // Engagement
  postEngagements Int      @default(0)
  linkClicks      Int      @default(0)
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastSyncAt      DateTime @default(now()) // Last time insights were synced
  
  @@index([adAccountId])
  @@index([status])
  @@index([pageId])
}

// Track sync history
model AdSyncLog {
  id          String   @id @default(cuid())
  userId      String
  adAccountId String?
  syncType    String   // FULL, INCREMENTAL, WEBHOOK
  status      String   // SUCCESS, FAILED, IN_PROGRESS
  adsCount    Int      @default(0)
  error       String?  @db.Text
  startedAt   DateTime @default(now())
  completedAt DateTime?
}
