{
    "manifest_version": 3,
    "name": "Facebook Ads Token Extractor",
    "version": "1.0",
    "description": "Extracts Facebook Access Token for Ads Dashboard",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://business.facebook.com/*",
        "*://adsmanager.facebook.com/*",
        "*://www.facebook.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}